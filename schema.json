{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "minProperties": 4,
  "required": ["participations", "contexts", "actions", "transitions"],
  "properties": {
    "participations": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "contexts": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "transitions": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "/": {}
      },
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["result"],
            "properties": {
              "result": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              }
            },
            "patternProperties": {
              "^m[a-zA-Z_][a-zA-Z0-9_]*$": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}

